@model IEnumerable<MVCBlog.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlogBaslik)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.BlogIcerik)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogOkunmaSayisi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogOkunmaSuresi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogTarih)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BlogBaslik)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.BlogIcerik)
        </td>*@
        <td>
            <img class="img-responsive" width="75" src="@item.Foto" alt=".."/>
            @*@Html.DisplayFor(modelItem => item.Foto)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogOkunmaSayisi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogOkunmaSuresi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogTarih)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.BlogID }) |
            @Html.ActionLink("Ayrıntılar", "Details", new { id=item.BlogID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.BlogID })
        </td>
    </tr>
}

</table>
